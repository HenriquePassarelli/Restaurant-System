generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userName  String   @unique
  password  String   @db.String()
  name      String?
  createdAt DateTime @default(now())
  lasChange DateTime @default(now())

  rolesId String[] @db.ObjectId

  roles  Role[]  @relation(fields: [rolesId], references: [id])
  tables Table[] @relation()

  @@index([rolesId])
  @@map("user")
}

model Role {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String?  @default("")
  createdAt   DateTime @default(now())
  lasChange   DateTime @default(now())

  usersId String[] @map("users") @db.ObjectId

  users User[] @relation(fields: [usersId], references: [id])

  @@index([usersId])
  @@map("role")
}

model Table {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  alias     String
  createdAt DateTime @default(now())
  lasChange DateTime @default(now())

  userId String[] @map("user") @db.ObjectId

  user User @relation(fields: [userId], references: [id])

  @@map("table")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       Float
  description String?  @default("")
  createdAt   DateTime @default(now())
  lasChange   DateTime @default(now())

  @@map("product")
}
